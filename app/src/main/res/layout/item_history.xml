<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="12dp">

    <TextView
        android:id="@+id/textHistoryProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nazwa produktu"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textHistoryShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sklep: "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textHistoryProductName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/textHistoryPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cena: "
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/textHistoryShop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/textHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/textHistoryPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/textHistoryMsg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Opis okazji"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/textHistoryDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>