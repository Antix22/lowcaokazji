<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nazwa produktu"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategoria"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cena docelowa: 0.00 zł"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textProductUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://adres.strony"
            android:textColor="@android:color/holo_blue_dark"
            android:autoLink="web"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/textProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis produktu"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editNewTargetPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nowy próg cenowy"
            android:inputType="numberDecimal"
            android:visibility="gone"/>

        <Button
            android:id="@+id/buttonChangePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zmień"/>

        <Button
            android:id="@+id/buttonSavePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zapisz"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>
</ScrollView>